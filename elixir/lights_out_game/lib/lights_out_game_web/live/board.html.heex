<div class="flex flex-col max-w-lg mx-auto">
  <div class="grid grid-rows-5 grid-cols-5 gap-2 mb-4">
    <%= for {{x, y}, value} <- @grid do%>
      <button class="block h-20 px-4 py-6 text-center border rounded bg-stone-300" phx-click="toggle" phx-value-x={x}
        phx-value-y={y} data-on={"#{value}"}>
      </button>
      <% end %>
  </div>
</div>